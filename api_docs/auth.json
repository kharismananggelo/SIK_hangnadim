{
  "openapi": "3.1.1",
  "info": {
    "title": "Hang Nadim SIK RESTful API - Auth",
    "version": "1.0",
    "description": "Authentication endpoints: register, login, forgot password, reset password, me, logout.",
    "contact": { "email": "luckyabdillah00@gmail.com" }
  },
  "servers": [
    { "url": "https://sik.luckyabdillah.com/api/v1" },
    { "url": "http://127.0.0.1:8000/api/v1/auth/login" }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user and return JWT token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "password_confirmation"],
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" },
                  "password_confirmation": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": { "$ref": "#/components/schemas/User" },
                    "access_token": { "type": "string" },
                    "token_type": { "type": "string" }
                  }
                }
              }
            }
          },
          "422": { "description": "Validation error" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login with email and password, returns JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": { "type": "string" },
                    "token_type": { "type": "string" },
                    "user": { "type": "object" }
                  }
                }
              }
            }
          },
          "401": { "description": "Invalid credentials" },
          "422": { "description": "Validation error" }
        }
      }
    },
    "/auth/forgot": {
      "post": {
        "tags": ["Auth"],
        "summary": "Send password reset link to email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": { "email": { "type": "string", "format": "email" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Reset link sent (or localized status message)" },
          "400": { "description": "Could not send reset link" }
        }
      }
    },
    "/auth/reset": {
      "post": {
        "tags": ["Auth"],
        "summary": "Reset password using token sent by email; returns JWT on success",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["token", "email", "password", "password_confirmation"],
                "properties": {
                  "token": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" },
                  "password_confirmation": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successful",
            "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" }, "access_token": { "type": "string" }, "token_type": { "type": "string" } } } } }
          },
          "400": { "description": "Reset failed or invalid token" }
        }
      }
    },
    "/auth/me": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Auth"],
        "summary": "Get current authenticated user",
        "responses": {
          "200": { "description": "Current user", "content": { "application/json": { "schema": { "type": "object", "properties": { "user": { "$ref": "#/components/schemas/User" } } } } } },
          "401": { "description": "Unauthenticated" }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Auth"],
        "summary": "Invalidate current JWT (logout)",
        "responses": {
          "200": { "description": "Successfully logged out" },
          "401": { "description": "Unauthenticated" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "uuid": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string" }
        }
      }
    }
  }
}
